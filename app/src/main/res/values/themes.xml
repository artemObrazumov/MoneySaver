<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneySaver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="purple_200">@color/purple_200</item>
        <item name="purple_500">@color/purple_500</item>
        <item name="purple_700">@color/purple_700</item>
        <item name="backgroundOrange">@color/backgroundOrange</item>
        <item name="teal_200">@color/teal_200</item>
        <item name="teal_700">@color/teal_700</item>
        <item name="black">@color/black</item>
        <item name="white">@color/white</item>
        <item name="backgroundColor">@color/background</item>
        <item name="cardGreenLight">@color/cardGreenLight</item>
        <item name="cardGreenDark">@color/cardGreenDark</item>
        <item name="cardBlueLight">@color/cardBlueLight</item>
        <item name="cardBlueDark">@color/cardBlueDark</item>
        <item name="expenses">@color/expenses</item>
        <item name="dot_selected">@color/purple_500</item>
        <item name="dot_unselected">@android:color/darker_gray</item>
        <item name="separator">@color/separator</item>
        <item name="checkbox">@color/purple_500</item>
        <item name="toolbarColor">@color/white</item>
        <item name="menuItem">@color/purple_500</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/purple_500</item>
        <item name="colorPrimaryVariant">?attr/purple_700</item>
        <item name="colorOnPrimary">?attr/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/teal_200</item>
        <item name="colorSecondaryVariant">?attr/teal_700</item>
        <item name="colorOnSecondary">?attr/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="container">
        <item name="android:background">@drawable/container</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="containerCorners">
        <item name="android:background">@drawable/container_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="edittext" parent="">
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="CustomButton" parent="">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="CustomButtonRed" parent="CustomButton">
        <item name="android:background">@drawable/button_red_background</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="Theme.MoneySaver.Dark" parent="Theme.MoneySaver">
        <item name="android:textColor">#ffffffff</item>
        <item name="white">@color/whiteDark</item>
        <item name="backgroundColor">@color/bgDark</item>
        <item name="black">@color/white</item>
        <item name="purple_200">@color/brandDark</item>
        <item name="purple_500">@color/brandDark</item>
        <item name="purple_700">@color/brandDark</item>
        <item name="dot_selected">@color/white</item>
        <item name="dot_unselected">@color/bgDark</item>
        <item name="separator">@color/separatorDark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="checkbox">@color/white</item>
        <item name="toolbarColor">@color/bgDark</item>
        <item name="menuItem">@color/white</item>
    </style>
</resources>